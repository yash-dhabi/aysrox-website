# Server Configuration
NODE_ENV=development
PORT=5000

# Database (adjust based on your needs - MySQL/PostgreSQL common for SaaS)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_app_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Vite Frontend (for API base URL in client)
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=YourAppName

# Common SaaS Services (add as needed for your routes)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (for notifications/transactional emails)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${VITE_APP_NAME}"

# File Storage (local or cloud)
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Payments (Stripe common for SaaS/property management)
STRIPE_KEY=pk_test_...
STRIPE_SECRET=sk_test_...

# JWT/Auth (if using token-based auth)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=60m

# Logging/Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS (if frontend on different port/domain)
CORS_ORIGIN=http://localhost:5173
